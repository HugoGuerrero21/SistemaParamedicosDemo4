<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SistemaParamedicosDemo4.MVVM.Views.ConsultaView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="clr-namespace:SistemaParamedicosDemo4.Behaviors"
             Title="Vista de paramedicos"
             BackgroundColor="#F5F7FA">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Colores -->
            <Color x:Key="PrimaryColor">#2E86AB</Color>
            <Color x:Key="SecondaryColor">#17A2B8</Color>
            <Color x:Key="SuccessColor">#28A745</Color>
            <Color x:Key="DangerColor">#DC3545</Color>
            <Color x:Key="WarningColor">#FFC107</Color>
            <Color x:Key="LightGray">#F8F9FA</Color>
            <Color x:Key="MediumGray">#6C757D</Color>
            <Color x:Key="DarkGray">#343A40</Color>
            <Color x:Key="BorderColor">#DEE2E6</Color>

            <!-- Estilos -->
            <Style x:Key="CardStyle" TargetType="Border">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="StrokeThickness" Value="1"/>
                <Setter Property="Stroke" Value="{StaticResource BorderColor}"/>
                <Setter Property="StrokeShape" Value="RoundRectangle 8"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Shadow">
                    <Setter.Value>
                        <Shadow Brush="Gray" Opacity="0.15" Radius="6" Offset="0,2"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="HeaderStyle" TargetType="Label">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="{StaticResource DarkGray}"/>
                <Setter Property="Margin" Value="0,0,0,5"/>
            </Style>

            <Style x:Key="SubHeaderStyle" TargetType="Label">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="{StaticResource DarkGray}"/>
                <Setter Property="Margin" Value="0"/>
            </Style>

            <Style x:Key="SectionHeaderStyle" TargetType="Label">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="{StaticResource DarkGray}"/>
                <Setter Property="Margin" Value="0,0,0,10"/>
            </Style>

            <Style x:Key="BodyStyle" TargetType="Label">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="TextColor" Value="{StaticResource MediumGray}"/>
            </Style>

            <Style x:Key="FieldLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="TextColor" Value="{StaticResource DarkGray}"/>
                <Setter Property="Margin" Value="0,0,0,5"/>
            </Style>

            <Style x:Key="EntryStyle" TargetType="Entry">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="PlaceholderColor" Value="{StaticResource MediumGray}"/>
                <Setter Property="TextColor" Value="{StaticResource DarkGray}"/>
                <Setter Property="Margin" Value="0,0,0,15"/>
            </Style>

            <Style x:Key="PickerStyle" TargetType="Picker">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="TextColor" Value="{StaticResource DarkGray}"/>
                <Setter Property="TitleColor" Value="{StaticResource MediumGray}"/>
                <Setter Property="Margin" Value="0,0,0,15"/>
            </Style>

            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource SuccessColor}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="Padding" Value="20,12"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>

            <Style x:Key="DangerButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource DangerColor}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="Padding" Value="20,12"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>

            <Style x:Key="IconButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="FontSize" Value="12"/>
            </Style>

            <Style x:Key="AvatarStyle" TargetType="Border">
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}"/>
                <Setter Property="StrokeThickness" Value="0"/>
                <Setter Property="StrokeShape" Value="RoundRectangle 25"/>
                <Setter Property="WidthRequest" Value="50"/>
                <Setter Property="HeightRequest" Value="50"/>
                <Setter Property="Padding" Value="0"/>
            </Style>

            <Style x:Key="StatusBadgeStyle" TargetType="Border">
                <Setter Property="BackgroundColor" Value="{StaticResource SuccessColor}"/>
                <Setter Property="StrokeThickness" Value="0"/>
                <Setter Property="StrokeShape" Value="RoundRectangle 12"/>
                <Setter Property="Padding" Value="8,4"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <!-- â­ PANTALLA DE BÃšSQUEDA DE EMPLEADOS -->
        <ScrollView IsVisible="{Binding MostrarBusquedaEmpleado}">
            <StackLayout Padding="20">

                <!-- Header BÃºsqueda -->
                <Label Text="Buscar Empleado" 
                       Style="{StaticResource HeaderStyle}"
                       Margin="0,0,0,10"/>

                <Label Text="Busca al empleado para realizar la consulta mÃ©dica" 
                       Style="{StaticResource BodyStyle}"
                       Margin="0,0,0,20"/>

                <!-- Barra de bÃºsqueda -->
                <Border Style="{StaticResource CardStyle}">
                    <StackLayout>
                        <Label Text="ðŸ” Buscar por nombre o ID:" 
                               Style="{StaticResource FieldLabelStyle}"/>
                        <Entry Text="{Binding TextoBusqueda}"
                               Placeholder="Ingresa nombre o ID del empleado..."
                               Style="{StaticResource EntryStyle}"
                               Margin="0"/>
                    </StackLayout>
                </Border>

                <!-- Lista de empleados -->
                <Border Style="{StaticResource CardStyle}" Padding="10">
                    <StackLayout>
                        <Label Text="Empleados encontrados:" 
                               Style="{StaticResource SectionHeaderStyle}"
                               Margin="10,10,10,15"/>

                        <CollectionView ItemsSource="{Binding EmpleadosFiltrados}"
                                        SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border BackgroundColor="White"
                                            StrokeThickness="1"
                                            Stroke="{StaticResource BorderColor}"
                                            StrokeShape="RoundRectangle 8"
                                            Padding="15"
                                            Margin="5">
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer 
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SeleccionarEmpleadoCommand}"
                                                CommandParameter="{Binding .}"/>
                                        </Border.GestureRecognizers>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Avatar -->
                                            <Border Grid.Column="0" 
                                                    BackgroundColor="{StaticResource PrimaryColor}"
                                                    StrokeThickness="0"
                                                    StrokeShape="RoundRectangle 25"
                                                    WidthRequest="50"
                                                    HeightRequest="50">
                                                <Label Text="{Binding Iniciales}" 
                                                       TextColor="White"
                                                       FontSize="18"
                                                       FontAttributes="Bold"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"/>
                                            </Border>

                                            <!-- Info -->
                                            <StackLayout Grid.Column="1" 
                                                         Spacing="3" 
                                                         Margin="15,0,0,0"
                                                         VerticalOptions="Center">
                                                <Label Text="{Binding Nombre}" 
                                                       Style="{StaticResource SubHeaderStyle}"
                                                       FontSize="16"/>
                                                <Label Text="{Binding IdEmpleado}" 
                                                       Style="{StaticResource BodyStyle}"
                                                       FontSize="12"/>
                                                <Label Text="{Binding IdPuesto, StringFormat='Puesto: {0}'}" 
                                                       Style="{StaticResource BodyStyle}"
                                                       FontSize="12"/>
                                            </StackLayout>

                                            <!-- Icono -->
                                            <Label Grid.Column="2"
                                                   Text="â†’"
                                                   FontSize="24"
                                                   TextColor="{StaticResource PrimaryColor}"
                                                   VerticalOptions="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </Border>

            </StackLayout>
        </ScrollView>

        <!-- â­ PANTALLA DE FORMULARIO DE CONSULTA -->
        <ScrollView IsVisible="{Binding MostrarFormularioConsulta}">
            <StackLayout Padding="20">

                <!-- Header -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackLayout Grid.Column="0">
                        <Label Text="Nueva consulta" Style="{StaticResource HeaderStyle}"/>
                        <Label Text="A continuaciÃ³n se muestra el formulario para hacer registro de una nueva consulta mÃ©dica." 
                               Style="{StaticResource BodyStyle}"/>
                    </StackLayout>

                    <Label Grid.Column="1" 
                           Text="{Binding Consulta.FechaConsulta, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                           Style="{StaticResource BodyStyle}"
                           VerticalOptions="Start"/>
                </Grid>

                <!-- InformaciÃ³n del Paciente -->
                <Border Style="{StaticResource CardStyle}">
                    <StackLayout>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Avatar -->
                            <Border Grid.Column="0" Style="{StaticResource AvatarStyle}">
                                <Label Text="{Binding EmpleadoSeleccionado.Iniciales}" 
                                       TextColor="White"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <!-- Info bÃ¡sica -->
                            <StackLayout Grid.Column="1" Spacing="2" Margin="15,0,0,0">
                                <Label Text="{Binding EmpleadoSeleccionado.Nombre}" 
                                       Style="{StaticResource SubHeaderStyle}"/>
                                <Label Text="{Binding EmpleadoSeleccionado.IdEmpleado}" 
                                       Style="{StaticResource BodyStyle}"/>
                            </StackLayout>

                            <!-- Status -->
                            <Border Grid.Column="2" Style="{StaticResource StatusBadgeStyle}" Margin="0,0,10,0">
                                <Label Text="â— Activo" 
                                       TextColor="White"
                                       FontSize="12"
                                       FontAttributes="Bold"/>
                            </Border>

                            <!-- BotÃ³n Cambiar Empleado -->
                            <Button Grid.Column="3"
                                    Text="Cambiar"
                                    Command="{Binding CambiarEmpleadoCommand}"
                                    BackgroundColor="{StaticResource SecondaryColor}"
                                    TextColor="White"
                                    CornerRadius="6"
                                    Padding="15,8"
                                    FontSize="12"/>
                        </Grid>

                        <!-- InformaciÃ³n General -->
                        <Label Text="InformaciÃ³n General" Style="{StaticResource SectionHeaderStyle}" Margin="0,20,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackLayout Grid.Column="0" Grid.Row="0" Spacing="2">
                                <Label Text="Id Empleado:" Style="{StaticResource FieldLabelStyle}"/>
                                <Label Text="{Binding EmpleadoSeleccionado.IdEmpleado}" Style="{StaticResource BodyStyle}" FontAttributes="Bold"/>
                            </StackLayout>

                            <StackLayout Grid.Column="1" Grid.Row="0" Spacing="2">
                                <Label Text="Nombre:" Style="{StaticResource FieldLabelStyle}"/>
                                <Label Text="{Binding EmpleadoSeleccionado.Nombre}" Style="{StaticResource BodyStyle}" FontAttributes="Bold"/>
                            </StackLayout>

                            <StackLayout Grid.Column="2" Grid.Row="0" Spacing="2">
                                <Label Text="TelÃ©fono:" Style="{StaticResource FieldLabelStyle}"/>
                                <Label Text="{Binding EmpleadoSeleccionado.Telefono}" Style="{StaticResource BodyStyle}" FontAttributes="Bold"/>
                            </StackLayout>

                            <StackLayout Grid.Column="3" Grid.Row="0" Spacing="2">
                                <Label Text="Alergias:" Style="{StaticResource FieldLabelStyle}"/>
                                <Label Text="{Binding EmpleadoSeleccionado.AlergiasSangre}" Style="{StaticResource BodyStyle}" FontAttributes="Bold"/>
                            </StackLayout>

                            <StackLayout Grid.Column="0" Grid.Row="1" Spacing="2">
                                <Label Text="Edad:" Style="{StaticResource FieldLabelStyle}"/>
                                <Label Text="{Binding Edad}" Style="{StaticResource BodyStyle}" FontAttributes="Bold"/>
                            </StackLayout>

                            <StackLayout Grid.Column="1" Grid.Row="1" Spacing="2">
                                <Label Text="Sexo:" Style="{StaticResource FieldLabelStyle}"/>
                                <Label Text="{Binding EmpleadoSeleccionado.Sexo}" Style="{StaticResource BodyStyle}" FontAttributes="Bold"/>
                            </StackLayout>

                            <StackLayout Grid.Column="2" Grid.Row="1" Spacing="2">
                                <Label Text="Puesto:" Style="{StaticResource FieldLabelStyle}"/>
                                <Label Text="{Binding EmpleadoSeleccionado.IdPuesto}" Style="{StaticResource BodyStyle}" FontAttributes="Bold"/>
                            </StackLayout>

                            <StackLayout Grid.Column="3" Grid.Row="1" Spacing="2">
                                <Label Text="Tipo de sangre:" Style="{StaticResource FieldLabelStyle}"/>
                                <Label Text="{Binding EmpleadoSeleccionado.TipoSangre}" Style="{StaticResource BodyStyle}" FontAttributes="Bold"/>
                            </StackLayout>
                        </Grid>
                    </StackLayout>
                </Border>

                <!-- Ãšltimas 5 consultas (DESPLEGABLE) -->
                <Border Style="{StaticResource CardStyle}" 
                        IsVisible="{Binding TieneConsultasPrevias}"
                        BackgroundColor="White">
                    <StackLayout>
                        <!-- Header clickeable -->
                        <Grid>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ToggleHistorialCommand}"/>
                            </Grid.GestureRecognizers>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0"
                                    Text="ðŸ“‹"
                                    FontSize="18"
                                    VerticalOptions="Center"
                                    Margin="0,0,10,0"/>

                            <Label Grid.Column="1"
                                    Text="Ãšltimas 5 consultas" 
                                    Style="{StaticResource SectionHeaderStyle}"
                                    TextColor="Black"
                                    VerticalOptions="Center"
                                    Margin="0"/>

                            <Label Grid.Column="2"
                                    FontSize="24"
                                    TextColor="Green"
                                    VerticalOptions="Center">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" Binding="{Binding HistorialExpandido}" Value="True">
                                        <Setter Property="Text" Value="â–¼"/>
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label" Binding="{Binding HistorialExpandido}" Value="False">
                                        <Setter Property="Text" Value="â–¶"/>
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                        </Grid>

                        <!-- Contenido expandible -->
                        <StackLayout IsVisible="{Binding HistorialExpandido}" Margin="0,10,0,0">
                            <CollectionView ItemsSource="{Binding UltimasConsultas}"
                                SelectionMode="None"
                                HeightRequest="250">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Border BackgroundColor="#F5FFFE"
                                                StrokeThickness="1"
                                                Stroke="{StaticResource BorderColor}"
                                                StrokeShape="RoundRectangle 8"
                                                Padding="12"
                                                Margin="0,5">
                                            <StackLayout Spacing="6">
                                                <Label Text="{Binding FechaFormateada}"
                                                        FontSize="11"
                                                        TextColor="Black"
                                                        FontAttributes="Bold"/>

                                                <HorizontalStackLayout Spacing="5">
                                                    <Label Text="Motivo:"
                                                            FontSize="12"
                                                            TextColor="{StaticResource MediumGray}"
                                                            FontAttributes="Bold"/>
                                                    <Label Text="{Binding MotivoConsulta}"
                                                            FontSize="12"
                                                            TextColor="{StaticResource DarkGray}"
                                                            LineBreakMode="TailTruncation"/>
                                                </HorizontalStackLayout>

                                                <HorizontalStackLayout Spacing="5">
                                                    <Label Text="DiagnÃ³stico:"
                                                            FontSize="12"
                                                            TextColor="{StaticResource MediumGray}"
                                                            FontAttributes="Bold"/>
                                                    <Label Text="{Binding Diagnostico}"
                                                            FontSize="12"
                                                            TextColor="{StaticResource DarkGray}"
                                                            LineBreakMode="TailTruncation"/>
                                                </HorizontalStackLayout>

                                                <Border BackgroundColor="White"
                                                        StrokeThickness="0"
                                                        StrokeShape="RoundRectangle 6"
                                                        Padding="6,3"
                                                        HorizontalOptions="Start">
                                                    <Label Text="{Binding TipoEnfermedad}"
                                                           FontSize="10"
                                                           TextColor="Black"
                                                           FontAttributes="Bold"/>
                                                </Border>
                                            </StackLayout>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </StackLayout>
                    </StackLayout>
                </Border>

                <!-- Signos vitales y Consulta -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Signos vitales -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                        <StackLayout>
                            <Label Text="Signos vitales" Style="{StaticResource SectionHeaderStyle}"/>

                            <Label Text="TensiÃ³n arterial:" Style="{StaticResource FieldLabelStyle}"/>
                            <Entry Text="{Binding TensionArterial}" Placeholder="120/80" Style="{StaticResource EntryStyle}">
                                <Entry.Behaviors>
                                    <behaviors:TensionArterialBehavior/>
                                </Entry.Behaviors>
                            </Entry>

                            <Label Text="Temperatura:" Style="{StaticResource FieldLabelStyle}"/>
                            <Entry Text="{Binding Temperatura}" Placeholder="36.5" Keyboard="Numeric" Style="{StaticResource EntryStyle}">
                                <Entry.Behaviors>
                                    <behaviors:DecimalValidationBehavior/>
                                </Entry.Behaviors>
                            </Entry>

                            <Label Text="Frecuencia CardÃ­aca:" Style="{StaticResource FieldLabelStyle}"/>
                            <Entry Text="{Binding FrecuenciaCardiaca}" Placeholder="72" Keyboard="Numeric" Style="{StaticResource EntryStyle}">
                                <Entry.Behaviors>
                                    <behaviors:NumericValidationBehavior/>
                                </Entry.Behaviors>
                            </Entry>

                            <Label Text="Frecuencia Respiratoria:" Style="{StaticResource FieldLabelStyle}"/>
                            <Entry Text="{Binding FrecuenciaRespiratoria}" Placeholder="16" Keyboard="Numeric" Style="{StaticResource EntryStyle}">
                                <Entry.Behaviors>
                                    <behaviors:NumericValidationBehavior/>
                                </Entry.Behaviors>
                            </Entry>

                            <Label Text="Observaciones:" Style="{StaticResource FieldLabelStyle}"/>
                            <Entry Text="{Binding ObservacionesSignos}" Placeholder="Observaciones adicionales..." Style="{StaticResource EntryStyle}"/>
                        </StackLayout>
                    </Border>

                    <!-- Consulta -->
                    <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                        <StackLayout>
                            <Label Text="Consulta" Style="{StaticResource SectionHeaderStyle}"/>

                            <Label Text="Motivo de Consulta:" Style="{StaticResource FieldLabelStyle}"/>
                            <Entry Text="{Binding MotivoConsulta}" Placeholder="Describe el motivo..." Style="{StaticResource EntryStyle}"/>

                            <Label Text="DiagnÃ³stico:" Style="{StaticResource FieldLabelStyle}"/>
                            <Entry Text="{Binding Diagnostico}" Placeholder="DiagnÃ³stico mÃ©dico..." Style="{StaticResource EntryStyle}"/>

                            <Label Text="ClasificaciÃ³n:" Style="{StaticResource FieldLabelStyle}"/>
                            <Picker ItemsSource="{Binding TiposEnfermedad}"
                                    ItemDisplayBinding="{Binding NombreEnfermedad}"
                                    SelectedItem="{Binding TipoEnfermedadSeleccionado}"
                                    Title="Seleccionar clasificaciÃ³n" 
                                    Style="{StaticResource PickerStyle}"/>

                            <Label Text="Recomendaciones:" Style="{StaticResource FieldLabelStyle}"/>
                            <Entry Text="{Binding Tratamiento}" Placeholder="Recomendacion por el paramedico" Style="{StaticResource EntryStyle}"/>

                            <Label Text="Ãšltima comida:" Style="{StaticResource FieldLabelStyle}"/>
                            <Entry Text="{Binding UltimaComida}" Placeholder="Â¿CuÃ¡ndo fue la Ãºltima comida?" Style="{StaticResource EntryStyle}"/>

                            <!-- Checkbox de control -->
                            <HorizontalStackLayout Spacing="10" Margin="0,20,0,0">
                                <CheckBox IsChecked="{Binding SeUtilizoMaterial}"
                                          Color="{StaticResource PrimaryColor}"
                                          VerticalOptions="Center"/>
                                <Label Text="Se utilizÃ³ material o medicamento"
                                       Style="{StaticResource BodyStyle}"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </StackLayout>
                    </Border>
                </Grid>

                <!-- Material utilizado -->
                <Border Style="{StaticResource CardStyle}"
                        IsVisible="{Binding SeUtilizoMaterial}">
                    <StackLayout>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Text="Material utilizado" Style="{StaticResource SectionHeaderStyle}"/>
                        </Grid>

                        <StackLayout x:Name="PanelMedicamentos" Margin="0,15,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackLayout Grid.Column="0">
                                    <Label Text="Medicamento/Material:" Style="{StaticResource FieldLabelStyle}"/>
                                    <Picker x:Name="PickerMedicamento"
                                            ItemsSource="{Binding Medicamentos}"
                                            ItemDisplayBinding="{Binding NombreCompleto}"
                                            SelectedItem="{Binding MedicamentoSeleccionado}"
                                            Title="Seleccionar medicamento o material" 
                                            Style="{StaticResource PickerStyle}"/>
                                </StackLayout>

                                <StackLayout Grid.Column="2">
                                    <Label Text="Disponible:" Style="{StaticResource FieldLabelStyle}"/>
                                    <Label Text="{Binding CantidadDisponible, StringFormat='{0:F2}'}" 
                                           Style="{StaticResource BodyStyle}" 
                                           FontAttributes="Bold"
                                           VerticalOptions="Center"
                                           Margin="0,8,0,0"/>
                                </StackLayout>

                                <StackLayout Grid.Column="4">
                                    <Label Text="Cantidad:" Style="{StaticResource FieldLabelStyle}"/>
                                    <Entry x:Name="EntryCantidad"
                                           Text="{Binding CantidadMedicamento}"
                                           Placeholder="0" 
                                           Keyboard="Numeric"
                                           Style="{StaticResource EntryStyle}"/>
                                </StackLayout>

                                <Button Grid.Column="6"
                                        Text="+ AGREGAR"
                                        Command="{Binding AgregarMedicamentoCommand}"
                                        Style="{StaticResource IconButtonStyle}"
                                        VerticalOptions="End"
                                        Margin="0,0,0,15"/>
                            </Grid>

                            <!-- Lista de medicamentos agregados -->
                            <StackLayout x:Name="PanelListaMedicamentos" 
                                         IsVisible="{Binding TieneMedicamentosAgregados}">
                                <Label Text="Material/Medicamentos agregados:" 
                                       Style="{StaticResource FieldLabelStyle}" 
                                       Margin="0,10,0,5"/>

                                <Border BackgroundColor="{StaticResource LightGray}" 
                                        StrokeThickness="0" 
                                        Padding="15,10">
                                    <StackLayout>
                                        <!-- Header -->
                                        <Grid Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="4*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Label Grid.Column="0" 
                                                   Text="Medicamento/Material" 
                                                   FontAttributes="Bold" 
                                                   Style="{StaticResource BodyStyle}"/>
                                            <Label Grid.Column="1" 
                                                   Text="Cantidad" 
                                                   FontAttributes="Bold" 
                                                   Style="{StaticResource BodyStyle}"/>
                                            <Label Grid.Column="2" 
                                                   Text="AcciÃ³n" 
                                                   FontAttributes="Bold" 
                                                   Style="{StaticResource BodyStyle}"/>
                                        </Grid>

                                        <!-- Items -->
                                        <CollectionView ItemsSource="{Binding MedicamentosAgregados}">
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Padding="0,5">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="4*"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Label Grid.Column="0" 
                                                               Text="{Binding NombreMedicamento}" 
                                                               Style="{StaticResource BodyStyle}"/>
                                                        <Label Grid.Column="1" 
                                                               Text="{Binding Cantidad, StringFormat='{0:F2}'}" 
                                                               Style="{StaticResource BodyStyle}"/>
                                                        <Button Grid.Column="2"
                                                                Text="âœ•"
                                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EliminarMedicamentoCommand}"
                                                                CommandParameter="{Binding .}"
                                                                BackgroundColor="{StaticResource DangerColor}"
                                                                TextColor="White"
                                                                WidthRequest="35"
                                                                HeightRequest="35"
                                                                CornerRadius="4"
                                                                Padding="0"
                                                                FontSize="16"
                                                                FontAttributes="Bold"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>
                                    </StackLayout>
                                </Border>
                            </StackLayout>
                        </StackLayout>
                    </StackLayout>
                </Border>

                <!-- Botones de acciÃ³n -->
                <Grid Margin="0,20,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
