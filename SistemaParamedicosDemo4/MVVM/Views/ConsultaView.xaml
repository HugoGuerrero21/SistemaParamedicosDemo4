<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SistemaParamedicosDemo4.MVVM.Views.ConsultaView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:SistemaParamedicosDemo4.Converters"
             xmlns:behaviors="clr-namespace:SistemaParamedicosDemo4.Behaviors"
             xmlns:controls="clr-namespace:SistemaParamedicosDemo4.Controls"
             xmlns:viewModels="clr-namespace:SistemaParamedicosDemo4.MVVM.ViewModels"
             Title="Vista de paramedicos"
             BackgroundColor="#F5F7FA">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InverseBooleanConverter x:Key="InverseBool"/>
            <converters:UrlToImageSourceConverter x:Key="UrlToImage"/>
            <converters:HasValidPhotoConverter x:Key="HasValidPhoto"/>

            <!-- Colores -->
            <Color x:Key="PrimaryColor">#2E86AB</Color>
            <Color x:Key="SecondaryColor">#17A2B8</Color>
            <Color x:Key="SuccessColor">#28A745</Color>
            <Color x:Key="DangerColor">#DC3545</Color>
            <Color x:Key="WarningColor">#FFC107</Color>
            <Color x:Key="LightGray">#F8F9FA</Color>
            <Color x:Key="MediumGray">#6C757D</Color>
            <Color x:Key="DarkGray">#343A40</Color>
            <Color x:Key="BorderColor">#DEE2E6</Color>

            <!-- Estilos -->
            <Style x:Key="CardStyle" TargetType="Border">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="StrokeThickness" Value="1"/>
                <Setter Property="Stroke" Value="{StaticResource BorderColor}"/>
                <Setter Property="StrokeShape" Value="RoundRectangle 8"/>
                <Setter Property="Padding" Value="15"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Shadow">
                    <Setter.Value>
                        <Shadow Brush="Gray" Opacity="0.15" Radius="6" Offset="0,2"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="HeaderStyle" TargetType="Label">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="{StaticResource DarkGray}"/>
                <Setter Property="Margin" Value="0,0,0,5"/>
            </Style>

            <Style x:Key="SubHeaderStyle" TargetType="Label">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="{StaticResource DarkGray}"/>
                <Setter Property="Margin" Value="0"/>
            </Style>

            <Style x:Key="SectionHeaderStyle" TargetType="Label">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="{StaticResource DarkGray}"/>
                <Setter Property="Margin" Value="0,0,0,10"/>
            </Style>

            <Style x:Key="BodyStyle" TargetType="Label">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="TextColor" Value="{StaticResource MediumGray}"/>
            </Style>

            <Style x:Key="FieldLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="TextColor" Value="{StaticResource DarkGray}"/>
                <Setter Property="Margin" Value="0,0,0,5"/>
            </Style>

            <Style x:Key="EntryStyle" TargetType="Entry">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="PlaceholderColor" Value="{StaticResource MediumGray}"/>
                <Setter Property="TextColor" Value="{StaticResource DarkGray}"/>
                <Setter Property="Margin" Value="0,0,0,15"/>
            </Style>

            <Style x:Key="PickerStyle" TargetType="Picker">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="TextColor" Value="{StaticResource DarkGray}"/>
                <Setter Property="TitleColor" Value="{StaticResource MediumGray}"/>
                <Setter Property="Margin" Value="0,0,0,15"/>
            </Style>

            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource SuccessColor}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="Padding" Value="20,12"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>

            <Style x:Key="DangerButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource DangerColor}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="Padding" Value="20,12"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>

            <Style x:Key="IconButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="FontSize" Value="12"/>
            </Style>

            <Style x:Key="StatusBadgeStyle" TargetType="Border">
                <Setter Property="BackgroundColor" Value="{StaticResource SuccessColor}"/>
                <Setter Property="StrokeThickness" Value="0"/>
                <Setter Property="StrokeShape" Value="RoundRectangle 12"/>
                <Setter Property="Padding" Value="8,4"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <!-- â­ PANTALLA DE BÃšSQUEDA DE EMPLEADOS -->
        <ScrollView IsVisible="{Binding MostrarBusquedaEmpleado}">
            <StackLayout Padding="15">

                <!-- Header BÃºsqueda -->
                <Label Text="Buscar Empleado" 
                       Style="{StaticResource HeaderStyle}"
                       Margin="0,0,0,10"/>

                <Label Text="Busca al empleado para realizar la consulta mÃ©dica" 
                       Style="{StaticResource BodyStyle}"
                       Margin="0,0,0,20"/>

                <!-- Barra de bÃºsqueda -->
                <Border Style="{StaticResource CardStyle}">
                    <StackLayout>
                        <Label Text="ðŸ” Buscar por nombre o ID:" 
                               Style="{StaticResource FieldLabelStyle}"/>
                        <SearchBar Text="{Binding TextoBusqueda}"
                                   Placeholder="Buscar por nombre, ID o puesto..."
                                   SearchCommand="{Binding BuscarEmpleadoCommand}"
                                   BackgroundColor="White"
                                   TextColor="{StaticResource DarkGray}"
                                   PlaceholderColor="{StaticResource MediumGray}"
                                   Margin="0,0,0,10"/>

                        <Label Text="{Binding MensajeEstado}"
                               Style="{StaticResource BodyStyle}"
                               FontSize="12"
                               HorizontalOptions="Center"
                               Margin="0,5,0,0"/>

                        <ActivityIndicator IsRunning="{Binding IsCargandoEmpleados}"
                                          IsVisible="{Binding IsCargandoEmpleados}"
                                          Color="{StaticResource PrimaryColor}"
                                          Margin="0,10,0,0"/>
                    </StackLayout>
                </Border>

                <!-- Lista de empleados -->
                <Border Style="{StaticResource CardStyle}" Padding="10">
                    <StackLayout>
                        <Label Text="Empleados encontrados:" 
                               Style="{StaticResource SectionHeaderStyle}"
                               Margin="10,10,10,15"/>

                        <CollectionView ItemsSource="{Binding EmpleadosFiltrados}"
                                        SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border BackgroundColor="White"
                                            StrokeThickness="1"
                                            Stroke="{StaticResource BorderColor}"
                                            StrokeShape="RoundRectangle 8"
                                            Padding="12"
                                            Margin="5">
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer 
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SeleccionarEmpleadoCommand}"
                                                CommandParameter="{Binding .}"/>
                                        </Border.GestureRecognizers>

                                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                                            <!-- Avatar -->
                                            <controls:AvatarView Grid.Column="0"
                                                                FotoUrl="{Binding Foto}"
                                                                Iniciales="{Binding Iniciales}"
                                                                TamaÃ±o="50"
                                                                ColorFondo="#2E86AB"/>

                                            <!-- Info -->
                                            <StackLayout Grid.Column="1" 
                                                        Spacing="3" 
                                                        VerticalOptions="Center">
                                                <Label Text="{Binding Nombre}" 
                                                       Style="{StaticResource SubHeaderStyle}"
                                                       FontSize="15"
                                                       LineBreakMode="TailTruncation"/>

                                                <Label Text="{Binding NombrePuesto, StringFormat='Puesto: {0}'}" 
                                                       Style="{StaticResource BodyStyle}"
                                                       FontSize="12"
                                                       LineBreakMode="TailTruncation"/>
                                            </StackLayout>

                                            <!-- Icono -->
                                            <Label Grid.Column="2"
                                                   Text="â†’"
                                                   FontSize="24"
                                                   TextColor="{StaticResource PrimaryColor}"
                                                   VerticalOptions="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </Border>
            </StackLayout>
        </ScrollView>

        <!-- â­ PANTALLA DE FORMULARIO DE CONSULTA -->
        <ScrollView IsVisible="{Binding MostrarFormularioConsulta}">
            <StackLayout Padding="15">

                <!-- Header Responsivo -->
                <VerticalStackLayout Spacing="10" Margin="0,0,0,20">
                    <StackLayout Spacing="2">
                        <Label Text="Nueva consulta" Style="{StaticResource HeaderStyle}"/>
                        <Label Text="Registre los datos de la nueva consulta." 
                               Style="{StaticResource BodyStyle}"/>
                        <Label Text="{Binding Consulta.FechaConsulta, StringFormat='ðŸ“… {0:dd/MM/yyyy HH:mm}'}"
                               FontSize="13"
                               TextColor="{StaticResource PrimaryColor}"
                               FontAttributes="Bold"
                               Margin="0,5,0,0"/>
                    </StackLayout>

                    <Button Text="â† Regresar"
                            Command="{Binding CambiarEmpleadoCommand}"
                            BackgroundColor="{StaticResource SecondaryColor}"
                            TextColor="White"
                            CornerRadius="8"
                            HeightRequest="40"
                            FontSize="13"
                            HorizontalOptions="Start"/>
                </VerticalStackLayout>

                <!-- InformaciÃ³n del Paciente -->
                <Border Style="{StaticResource CardStyle}">
                    <StackLayout Spacing="15">
                        <!-- Avatar y nombre -->
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                            <controls:AvatarView Grid.Column="0"
                                                FotoUrl="{Binding EmpleadoSeleccionado.Foto}"
                                                Iniciales="{Binding EmpleadoSeleccionado.Iniciales}"
                                                TamaÃ±o="70"
                                                ColorFondo="#2E86AB"/>

                            <StackLayout Grid.Column="1" 
                                        Spacing="5" 
                                        VerticalOptions="Center">
                                <Label Text="{Binding EmpleadoSeleccionado.Nombre}" 
                                       Style="{StaticResource SubHeaderStyle}"
                                       FontSize="16"
                                       LineBreakMode="WordWrap"/>
                            </StackLayout>

                            <Border Grid.Column="2" 
                                    Style="{StaticResource StatusBadgeStyle}"
                                    VerticalOptions="Start">
                                <Label Text="â— Activo" 
                                       TextColor="White"
                                       FontSize="11"
                                       FontAttributes="Bold"/>
                            </Border>
                        </Grid>

                        <!-- InformaciÃ³n General -->
                        <Label Text="InformaciÃ³n General" 
                               Style="{StaticResource SectionHeaderStyle}" 
                               Margin="0,10,0,5"/>

                        <!-- Info en formato vertical para mÃ³vil -->
                        <VerticalStackLayout Spacing="12">
                            <!-- Fila 1 -->
                            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                                <StackLayout Grid.Column="0" Spacing="2">
                                    <Label Text="Id Empleado:" Style="{StaticResource FieldLabelStyle}"/>
                                    <Label Text="{Binding EmpleadoSeleccionado.IdEmpleado}" 
                                           Style="{StaticResource BodyStyle}" 
                                           FontAttributes="Bold"
                                           LineBreakMode="TailTruncation"/>
                                </StackLayout>

                                <StackLayout Grid.Column="1" Spacing="2">
                                    <Label Text="TelÃ©fono:" Style="{StaticResource FieldLabelStyle}"/>
                                    <Label Text="{Binding EmpleadoSeleccionado.Telefono}" 
                                           Style="{StaticResource BodyStyle}" 
                                           FontAttributes="Bold"/>
                                </StackLayout>
                            </Grid>

                            <!-- Fila 2 -->
                            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                                <StackLayout Grid.Column="0" Spacing="2">
                                    <Label Text="Edad:" Style="{StaticResource FieldLabelStyle}"/>
                                    <Label Text="{Binding Edad}" 
                                           Style="{StaticResource BodyStyle}" 
                                           FontAttributes="Bold"/>
                                </StackLayout>

                                <StackLayout Grid.Column="1" Spacing="2">
                                    <Label Text="Sexo:" Style="{StaticResource FieldLabelStyle}"/>
                                    <Label Text="{Binding EmpleadoSeleccionado.Sexo}" 
                                           Style="{StaticResource BodyStyle}" 
                                           FontAttributes="Bold"/>
                                </StackLayout>
                            </Grid>

                            <!-- Fila 3 -->
                            <StackLayout Spacing="2">
                                <Label Text="Puesto:" Style="{StaticResource FieldLabelStyle}"/>
                                <Label Text="{Binding EmpleadoSeleccionado.NombrePuesto}" 
                                       Style="{StaticResource BodyStyle}" 
                                       FontAttributes="Bold"
                                       LineBreakMode="WordWrap"/>
                            </StackLayout>

                            <!-- Fila 4 -->
                            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                                <StackLayout Grid.Column="0" Spacing="2">
                                    <Label Text="Tipo de sangre:" Style="{StaticResource FieldLabelStyle}"/>
                                    <Label Text="{Binding EmpleadoSeleccionado.TipoSangre}" 
                                           Style="{StaticResource BodyStyle}" 
                                           FontAttributes="Bold"/>
                                </StackLayout>

                                <StackLayout Grid.Column="1" Spacing="2">
                                    <Label Text="Alergias:" Style="{StaticResource FieldLabelStyle}"/>
                                    <Label Text="{Binding EmpleadoSeleccionado.AlergiasSangre}" 
                                           Style="{StaticResource BodyStyle}" 
                                           FontAttributes="Bold"
                                           LineBreakMode="WordWrap"/>
                                </StackLayout>
                            </Grid>
                        </VerticalStackLayout>
                    </StackLayout>
                </Border>

                <!-- Ãšltimas 5 consultas (DESPLEGABLE) -->
                <Border Style="{StaticResource CardStyle}" 
                        IsVisible="{Binding TieneConsultasPrevias}"
                        BackgroundColor="White">
                    <StackLayout>
                        <Grid>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ToggleHistorialCommand}"/>
                            </Grid.GestureRecognizers>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0"
                                   Text="ðŸ“‹"
                                   FontSize="18"
                                   VerticalOptions="Center"
                                   Margin="0,0,10,0"/>

                            <Label Grid.Column="1"
                                   Text="Ãšltimas 5 consultas" 
                                   Style="{StaticResource SectionHeaderStyle}"
                                   TextColor="Black"
                                   VerticalOptions="Center"
                                   Margin="0"/>

                            <Label Grid.Column="2"
                                   FontSize="24"
                                   TextColor="Green"
                                   VerticalOptions="Center">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" Binding="{Binding HistorialExpandido}" Value="True">
                                        <Setter Property="Text" Value="â–¼"/>
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label" Binding="{Binding HistorialExpandido}" Value="False">
                                        <Setter Property="Text" Value="â–¶"/>
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                        </Grid>

                        <StackLayout IsVisible="{Binding HistorialExpandido}" Margin="0,10,0,0">
                            <CollectionView ItemsSource="{Binding UltimasConsultas}"
                                            SelectionMode="None"
                                            HeightRequest="250">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Border BackgroundColor="#F5FFFE"
                                                StrokeThickness="1"
                                                Stroke="{StaticResource BorderColor}"
                                                StrokeShape="RoundRectangle 8"
                                                Padding="12"
                                                Margin="0,5">
                                            <StackLayout Spacing="6">
                                                <Label Text="{Binding FechaFormateada}"
                                                       FontSize="11"
                                                       TextColor="Black"
                                                       FontAttributes="Bold"/>

                                                <StackLayout Spacing="3">
                                                    <Label Text="Motivo:"
                                                           FontSize="12"
                                                           TextColor="{StaticResource MediumGray}"
                                                           FontAttributes="Bold"/>
                                                    <Label Text="{Binding MotivoConsulta}"
                                                           FontSize="12"
                                                           TextColor="{StaticResource DarkGray}"
                                                           LineBreakMode="WordWrap"/>
                                                </StackLayout>

                                                <StackLayout Spacing="3">
                                                    <Label Text="ValoraciÃ³n del paramÃ©dico:"
                                                           FontSize="12"
                                                           TextColor="{StaticResource MediumGray}"
                                                           FontAttributes="Bold"/>
                                                    <Label Text="{Binding Diagnostico}"
                                                           FontSize="12"
                                                           TextColor="{StaticResource DarkGray}"
                                                           LineBreakMode="WordWrap"/>
                                                </StackLayout>

                                                <Border BackgroundColor="White"
                                                        StrokeThickness="0"
                                                        StrokeShape="RoundRectangle 6"
                                                        Padding="6,3"
                                                        HorizontalOptions="Start">
                                                    <Label Text="{Binding TipoEnfermedad}"
                                                           FontSize="10"
                                                           TextColor="Black"
                                                           FontAttributes="Bold"/>
                                                </Border>
                                            </StackLayout>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </StackLayout>
                    </StackLayout>
                </Border>

                <!-- Signos vitales -->
                <Border Style="{StaticResource CardStyle}">
                    <StackLayout>
                        <Label Text="Signos vitales" Style="{StaticResource SectionHeaderStyle}"/>

                        <Label Text="TensiÃ³n arterial:" Style="{StaticResource FieldLabelStyle}"/>
                        <Entry Text="{Binding TensionArterial}" 
                               Placeholder="120/80" 
                               Style="{StaticResource EntryStyle}">
                            <Entry.Behaviors>
                                <behaviors:TensionArterialBehavior/>
                            </Entry.Behaviors>
                        </Entry>

                        <Grid ColumnDefinitions="*,10,*" ColumnSpacing="0">
                            <StackLayout Grid.Column="0">
                                <Label Text="Temperatura:" Style="{StaticResource FieldLabelStyle}"/>
                                <Entry Text="{Binding Temperatura}" 
                                       Placeholder="36.5" 
                                       Keyboard="Numeric" 
                                       Style="{StaticResource EntryStyle}">
                                    <Entry.Behaviors>
                                        <behaviors:DecimalValidationBehavior/>
                                    </Entry.Behaviors>
                                </Entry>
                            </StackLayout>

                            <StackLayout Grid.Column="2">
                                <Label Text="Frecuencia CardÃ­aca:" Style="{StaticResource FieldLabelStyle}"/>
                                <Entry Text="{Binding FrecuenciaCardiaca}" 
                                       Placeholder="72" 
                                       Keyboard="Numeric" 
                                       Style="{StaticResource EntryStyle}">
                                    <Entry.Behaviors>
                                        <behaviors:NumericValidationBehavior/>
                                    </Entry.Behaviors>
                                </Entry>
                            </StackLayout>
                        </Grid>

                        <Label Text="Frecuencia Respiratoria:" Style="{StaticResource FieldLabelStyle}"/>
                        <Entry Text="{Binding FrecuenciaRespiratoria}" 
                               Placeholder="16" 
                               Keyboard="Numeric" 
                               Style="{StaticResource EntryStyle}">
                            <Entry.Behaviors>
                                <behaviors:NumericValidationBehavior/>
                            </Entry.Behaviors>
                        </Entry>

                        <Label Text="Observaciones:" Style="{StaticResource FieldLabelStyle}"/>
                        <Entry Text="{Binding ObservacionesSignos}" 
                               Placeholder="Observaciones adicionales..." 
                               Style="{StaticResource EntryStyle}"/>
                    </StackLayout>
                </Border>

                <!-- Consulta -->
                <Border Style="{StaticResource CardStyle}">
                    <StackLayout>
                        <Label Text="Consulta" Style="{StaticResource SectionHeaderStyle}"/>

                        <Label Text="Motivo de Consulta:" Style="{StaticResource FieldLabelStyle}"/>
                        <Entry Text="{Binding MotivoConsulta}" 
                               Placeholder="Describe el motivo..." 
                               Style="{StaticResource EntryStyle}"/>

                        <Label Text="ValoraciÃ³n del paramÃ©dico:" Style="{StaticResource FieldLabelStyle}"/>
                        <Entry Text="{Binding Diagnostico}" 
                               Placeholder="ValoraciÃ³n y observaciones del paramÃ©dico..." 
                               Style="{StaticResource EntryStyle}"/>

                        <Label Text="ClasificaciÃ³n:" Style="{StaticResource FieldLabelStyle}"/>
                        <Picker ItemsSource="{Binding TiposEnfermedad}"
                                ItemDisplayBinding="{Binding NombreEnfermedad}"
                                SelectedItem="{Binding TipoEnfermedadSeleccionado}"
                                Title="Seleccionar clasificaciÃ³n" 
                                Style="{StaticResource PickerStyle}"/>

                        <Label Text="Recomendaciones:" Style="{StaticResource FieldLabelStyle}"/>
                        <Entry Text="{Binding Tratamiento}" 
                               Placeholder="Recomendacion por el paramedico" 
                               Style="{StaticResource EntryStyle}"/>

                        <Label Text="Ãšltima comida:" Style="{StaticResource FieldLabelStyle}"/>
                        <Entry Text="{Binding UltimaComida}" 
                               Placeholder="Â¿CuÃ¡ndo fue la Ãºltima comida?" 
                               Style="{StaticResource EntryStyle}"/>

                        <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">
                            <CheckBox IsChecked="{Binding SeUtilizoMaterial}"
                                      Color="{StaticResource PrimaryColor}"
                                      VerticalOptions="Center"/>
                            <Label Text="Se utilizÃ³ material o medicamento"
                                   Style="{StaticResource BodyStyle}"
                                   VerticalOptions="Center"
                                   LineBreakMode="WordWrap"/>
                        </HorizontalStackLayout>
                    </StackLayout>
                </Border>

                <!-- Material utilizado -->
                <Border Style="{StaticResource CardStyle}"
                        IsVisible="{Binding SeUtilizoMaterial}">
                    <StackLayout>
                        <Label Text="Material utilizado" Style="{StaticResource SectionHeaderStyle}"/>

                        <StackLayout Margin="0,10,0,0" Spacing="10">
                            <!-- Medicamento Picker -->
                            <StackLayout>
                                <Label Text="Medicamento/Material:" Style="{StaticResource FieldLabelStyle}"/>
                                <Picker ItemsSource="{Binding Medicamentos}"
                                        ItemDisplayBinding="{Binding NombreCompleto}"
                                        SelectedItem="{Binding MedicamentoSeleccionado}"
                                        Title="Seleccionar medicamento o material" 
                                        Style="{StaticResource PickerStyle}"/>
                            </StackLayout>

                            <!-- Disponible y Cantidad -->
                            <Grid ColumnDefinitions="*,10,*" ColumnSpacing="0">
                                <StackLayout Grid.Column="0">
                                    <Label Text="Disponible:" Style="{StaticResource FieldLabelStyle}"/>
                                    <Label Text="{Binding CantidadDisponible, StringFormat='{0:F2}'}" 
                                           Style="{StaticResource BodyStyle}" 
                                           FontAttributes="Bold"
                                           FontSize="16"
                                           Margin="0,5,0,0"/>
                                </StackLayout>

                                <StackLayout Grid.Column="2">
                                    <Label Text="Cantidad:" Style="{StaticResource FieldLabelStyle}"/>
                                    <Entry Text="{Binding CantidadMedicamento}"
                                           Placeholder="0" 
                                           Keyboard="Numeric"
                                           Style="{StaticResource EntryStyle}"/>
                                    <Label Text="{Binding MensajeErrorCantidad}"
                                           TextColor="{StaticResource DangerColor}"
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           IsVisible="{Binding CantidadExcedida}"
                                           Margin="0,5,0,0"/>

                                </StackLayout>
                            </Grid>

                           
                            <!-- BotÃ³n agregar -->
                            <Button Text="+ AGREGAR MEDICAMENTO"
                                    Command="{Binding AgregarMedicamentoCommand}"
                                    Style="{StaticResource IconButtonStyle}"
                                    Padding="15,12"
                                    FontSize="13"/>

                            <!-- Lista de medicamentos agregados -->
                            <StackLayout IsVisible="{Binding TieneMedicamentosAgregados}" 
                                        Margin="0,10,0,0">
                                <Label Text="Material/Medicamentos agregados:" 
                                       Style="{StaticResource FieldLabelStyle}" 
                                       Margin="0,0,0,10"/>

                                <Border BackgroundColor="{StaticResource LightGray}" 
                                        StrokeThickness="0" 
                                        Padding="10">
                                    <StackLayout>
                                        <CollectionView ItemsSource="{Binding MedicamentosAgregados}">
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BackgroundColor="White"
                                                            StrokeThickness="1"
                                                            Stroke="{StaticResource BorderColor}"
                                                            StrokeShape="RoundRectangle 6"
                                                            Padding="10"
                                                            Margin="0,5">
                                                        <Grid ColumnDefinitions="*,Auto,Auto" 
                                                              ColumnSpacing="10">
                                                            <StackLayout Grid.Column="0" 
                                                                        Spacing="2"
                                                                        VerticalOptions="Center">
                                                                <Label Text="{Binding NombreMedicamento}" 
                                                                       Style="{StaticResource BodyStyle}"
                                                                       FontAttributes="Bold"
                                                                       LineBreakMode="WordWrap"/>
                                                                <Label Text="{Binding Cantidad, StringFormat='Cantidad: {0:F2}'}" 
                                                                       Style="{StaticResource BodyStyle}"
                                                                       FontSize="12"/>
                                                            </StackLayout>

                                                            <Button Grid.Column="2"
                                                                    Text="âœ•"
                                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EliminarMedicamentoCommand}"
                                                                    CommandParameter="{Binding .}"
                                                                    BackgroundColor="{StaticResource DangerColor}"
                                                                    TextColor="White"
                                                                    WidthRequest="40"
                                                                    HeightRequest="40"
                                                                    CornerRadius="6"
                                                                    Padding="0"
                                                                    FontSize="18"
                                                                    FontAttributes="Bold"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>
                                    </StackLayout>
                                </Border>
                            </StackLayout>
                        </StackLayout>
                    </StackLayout>
                </Border>

                <!-- Botones de acciÃ³n -->
                <VerticalStackLayout Spacing="10" Margin="0,20,0,20">
                    <Button Text="GUARDAR"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding GuardarCommand}"
                            HeightRequest="45"/>

                    <Button Text="CANCELAR"
                            Style="{StaticResource DangerButtonStyle}"
                            Command="{Binding CancelarCommand}"
                            HeightRequest="45"/>
                </VerticalStackLayout>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>